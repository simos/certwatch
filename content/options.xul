<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<!DOCTYPE prefwindow SYSTEM "chrome://certwatch/locale/prefwindow.dtd">
<prefwindow id="certwatchPreferences" xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul" title="&prefwindow.title;">
<script type="application/javascript" src="chrome://certwatch/content/options.js"/>
  <prefpane id="prefpane" onpaneload="onPaneLoad()" label="&prefpane.title;">
    <preferences>
      <preference id="show_root" 
                  name="extensions.certwatch.show_root_certificate" 
                  type="int"/>
      <preference id="show_website" 
                  name="extensions.certwatch.show_website_certificate" 
                  type="int"/>
    </preferences>

  <dialogheader id="dialogPreferences" title="CertWatch" description="Preferences" />
  <vbox>
    <grid>
      <columns>
        <column flex="1" />
        <column flex="1" />
      </columns>

      <rows>
        <row>
          <groupbox>
          <caption label="Website certificates" />
          <hbox align="center">

          <label accesskey="&show_website.accesskey;" 
                   control="textintpref">
            &show_website.pref.label;
          </label>

          <menulist id="menulistWebsite">
            <menupopup id="menuPopupWebsite">
              <menuitem id="itemW0" oncommand='onSelectWebsite(0);'   label="never" />
              <menuitem id="itemW1" oncommand='onSelectWebsite(1);'   label="first time only" />
              <menuitem id="itemW2" oncommand='onSelectWebsite(2);'   label="first two times only" />
              <menuitem id="itemW3" oncommand='onSelectWebsite(3);'   label="first three times only" />
              <menuitem id="itemW5" oncommand='onSelectWebsite(5);'   label="first five times only" />
              <menuitem id="itemW10" oncommand='onSelectWebsite(10);' label="first ten times only" />
              <menuitem id="itemW20" oncommand='onSelectWebsite(20);' label="first twenty times only" />
              <menuitem id="itemWM1" oncommand='onSelectWebsite(-1);' label="always"  />
            </menupopup>
          </menulist>
          </hbox>
          </groupbox>
        </row>

        <row>
          <groupbox>
          <caption label="Root certificates" />
          <hbox flex="1" align="center">

          <label accesskey="&show_root.accesskey;" 
                   control="textintpref">
            &show_root.pref.label;
          </label>

          <menulist id="menulistRoot">
            <menupopup id="menuPopupRoot">
              <menuitem id="itemR0" oncommand='onSelectRoot(0);'   label="never" />
              <menuitem id="itemR1" oncommand='onSelectRoot(1);'   label="first time only" />
              <menuitem id="itemR2" oncommand='onSelectRoot(2);'   label="first two times only" />
              <menuitem id="itemR3" oncommand='onSelectRoot(3);'   label="first three times only" />
              <menuitem id="itemR5" oncommand='onSelectRoot(5);'   label="first five times only" />
              <menuitem id="itemR10" oncommand='onSelectRoot(10);' label="first ten times only" />
              <menuitem id="itemR20" oncommand='onSelectRoot(20);' label="first twenty times only" />
              <menuitem id="itemRM1" oncommand='onSelectRoot(-1);' label="always" />
            </menupopup>
          </menulist>
          </hbox>
          </groupbox>
        </row>

      </rows>
    </grid>
  </vbox>

  </prefpane>
</prefwindow>
